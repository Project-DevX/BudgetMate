# BudgetMate Environment Variables

# API Configuration
EXPO_PUBLIC_API_URL=https://api.budgetmate.com
EXPO_PUBLIC_ENVIRONMENT=development

# Google Gemini AI API
EXPO_PUBLIC_GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta
EXPO_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Plaid Integration (Banking APIs)
EXPO_PUBLIC_PLAID_ENV=sandbox
EXPO_PUBLIC_PLAID_CLIENT_ID=your_plaid_client_id_here
EXPO_PUBLIC_PLAID_CLIENT_NAME=BudgetMate

# OpenAI API (for AI chatbot features)
EXPO_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here
EXPO_PUBLIC_OPENAI_MODEL=gpt-3.5-turbo

# Firebase Configuration (if using Firebase services)
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=budgetmate.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=budgetmate
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=budgetmate.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id

# Google Sign-In Configuration
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your_google_web_client_id_here

# Analytics and Monitoring
EXPO_PUBLIC_ANALYTICS_ENABLED=true
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
EXPO_PUBLIC_PLAID_ENABLED=true
EXPO_PUBLIC_GEMINI_ENABLED=true
EXPO_PUBLIC_OPENAI_ENABLED=true
EXPO_PUBLIC_BIOMETRIC_AUTH_ENABLED=true
EXPO_PUBLIC_DARK_MODE_ENABLED=true

# Security Configuration
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_ENCRYPTION_KEY=your_encryption_key_here

# Development Configuration
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug
